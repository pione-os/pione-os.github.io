<?xml version="1.0" encoding="utf-8"?>
<!-- 本データの各項目の説明
name: インストールするパッケージの表示名
howto: インストール方法(apt,apt-key,apt-gpg,apt-asc,dpkg,pacman,sh,appimage,make)
install: インストールするパッケージの名前、何も指定しないなら None
uninstall: アンインストールするパッケージの名前、何も指定しないなら None
icon: アイコン ID の指定
repo: 追加するリポジトリの URL
gpg: 追加する GPG キーの URL
url: ダウンロードするファイルの URL
manage: 管理名
-->
<data>
  <item>
    <id>1</id>
    <name>Chrome</name>
    <howto>dpkg</howto>
    <install>None</install>
    <uninstall>chromium</uninstall>
    <icon>google-chrome</icon>
    <url>https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb</url>
    <manage>google-chrome</manage>
  </item>
  <item>
    <id>2</id>
    <name>Edge</name>
    <howto>apt-asc</howto>
    <install>microsoft-edge-stable</install>
    <uninstall>chromium</uninstall>
    <icon>microsoft-edge</icon>
    <repo>deb [arch=amd64] https://packages.microsoft.com/repos/edge stable main</repo>
    <gpg>https://packages.microsoft.com/keys/microsoft.asc</gpg>
    <manage>microsoft-edge</manage>
  </item>
  <item>
    <id>3</id>
    <name>Brave</name>
    <howto>apt-keyrings</howto>
    <install>brave-browser</install>
    <uninstall>chromium</uninstall>
    <icon>brave</icon>
    <repo>deb [signed-by=/usr/share/keyrings/brave-browser.gpg] https://brave-browser-apt-release.s3.brave.com/ stable main</repo>
    <gpg>https://brave-browser-apt-release.s3.brave.com/brave-browser-archive-keyring.gpg</gpg>
    <manage>brave-browser</manage>
  </item>
  <item>
    <id>4</id>
    <name>Firefox</name>
    <howto>apt-asc</howto>
    <install>firefox</install>
    <uninstall>chromium</uninstall>
    <icon>firefox</icon>
    <repo>deb https://packages.mozilla.org/apt mozilla main</repo>
    <gpg>https://packages.mozilla.org/apt/repo-signing-key.gpg</gpg>
    <manage>mozilla</manage>
  </item>
  <item>
    <id>5</id>
    <name>Floorp</name>
    <howto>apt-keyrings</howto>
    <install>floorp</install>
    <uninstall>chromium</uninstall>
    <icon>browser</icon>
    <repo>deb [signed-by=/usr/share/keyrings/Floorp.gpg] https://ppa.floorp.app/amd64 ./</repo>
    <gpg>https://ppa.ablaze.one/KEY.gpg</gpg>
    <manage>Floorp</manage>
  </item>
