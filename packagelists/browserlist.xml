<?xml version="1.0" encoding="utf-8"?>
<!-- 本データの各項目の説明
name: インストールするパッケージの表示名
howto: インストール方法(apt,apt-pub,apt-key,apt-gpg,apt-asc,pacman,sh,appimage,make)
install: インストールするパッケージの名前、何も指定しないなら None
uninstall: アンインストールするパッケージの名前、何も指定しないなら None
icon: アイコン ID の指定
repo: 追加するリポジトリの URL
gpg: 追加する GPG キーの URL
-->
<data>
  <item>
    <id>1</id>
    <name>Chrome</name>
    <howto>apt-pub</howto>
    <install>google-chrome-stable</install>
    <uninstall>chromium</uninstall>
    <icon>google-chrome</icon>
    <repo>deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main</repo>
    <gpg>https://dl.google.com/linux/linux_signing_key.pub</gpg>
  </item>
  <item>
    <id>2</id>
    <name>Edge</name>
    <howto>apt-asc</howto>
    <install>microsoft-edge-stable</install>
    <uninstall>chromium</uninstall>
    <icon>microsoft-edge</icon>
    <repo>deb [arch=amd64] https://packages.microsoft.com/repos/edge stable main</repo>
    <gpg>https://packages.microsoft.com/keys/microsoft.asc</gpg>
  </item>
  <item>
    <id>3</id>
    <name>Opera</name>
    <howto>apt-key</howto>
    <install>opera-stable</install>
    <uninstall>chromium</uninstall>
    <icon>opera</icon>
    <repo>deb https://deb.opera.com/opera-stable/ stable non-free</repo>
    <gpg>https://deb.opera.com/archive.key</gpg>
  </item>
  <item>
    <id>4</id>
    <name>Brave</name>
    <howto>apt-gpg</howto>
    <install>brave-browser</install>
    <uninstall>chromium</uninstall>
    <icon>brave</icon>
    <repo>deb [signed-by=/usr/share/keyrings/brave-browser.gpg] https://brave-browser-apt-release.s3.brave.com/ stable main</repo>
    <gpg>https://brave-browser-apt-release.s3.brave.com/brave-browser-archive-keyring.gpg</gpg>
  </item>
  <item>
    <id>5</id>
    <name>Firefox</name>
    <howto>apt-asc</howto>
    <install>firefox firefox-l10n-ja</install>
    <uninstall>chromium</uninstall>
    <icon>opera</icon>
    <repo>deb [signed-by=/etc/apt/keyrings/firefox.asc] https://packages.mozilla.org/apt mozilla main</repo>
    <gpg>https://packages.mozilla.org/apt/repo-signing-key.gpg</gpg>
  </item>
  <item>
    <id>6</id>
    <name>Floorp</name>
    <howto>apt-gpg</howto>
    <install>floorp</install>
    <uninstall>chromium</uninstall>
    <icon>browser</icon>
    <repo>deb [signed-by=/usr/share/keyrings/floorp.gpg] https://ppa.floorp.app/$(ARCH) ./</repo>
    <gpg>https://ppa.ablaze.one/KEY.gpg</gpg>
  </item>
</data>